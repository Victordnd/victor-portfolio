---
const {
  title = "Victor Daniel — Software Engineer",
  description = "Software Engineer focused on backend development, integrations, and legacy modernization (VB6 → .NET).",
} = Astro.props;

const base = import.meta.env.BASE_URL;
const canonical = new URL(base, Astro.site).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Social preview -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <!-- If you add /public/og.png later, uncomment:
    <meta property="og:image" content={`${canonical}og.png`} />
    -->

    <meta name="theme-color" content="#0b1220" />
  </head>

  <body class="min-h-screen bg-slate-950 text-slate-100">
    <header class="sticky top-0 z-50 border-b border-slate-800/60 bg-slate-950/70 backdrop-blur">
      <nav class="mx-auto flex max-w-5xl items-center justify-between px-4 py-3">
        <a class="font-semibold tracking-tight hover:text-white/90" href={`${base}`}>Victor Daniel</a>

        <div class="flex items-center gap-4 text-sm text-slate-300">
          <a class="hover:text-white" href={`${base}about/`}>About</a>
          <a class="hover:text-white" href={`${base}projects/`}>Projects</a>
          <a class="hover:text-white" href={`${base}contact/`}>Contact</a>
        </div>
      </nav>
    </header>

    <main class="mx-auto max-w-5xl px-4 py-10">
      <slot />
    </main>

    <footer class="border-t border-slate-800/60">
      <div class="mx-auto max-w-5xl px-4 py-8 text-sm text-slate-400">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <p>© {new Date().getFullYear()} Victor Daniel. Built with Astro.</p>
          <p class="text-slate-500">Last updated: {new Date().toISOString().slice(0, 10)}</p>
        </div>
      </div>
    </footer>
  </body>
</html>
